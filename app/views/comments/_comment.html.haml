%p= comment.body
%small= " Submitted by #{comment.user.email}, #{time_ago_in_words(comment.created_at)} ago   "
.pull-right
  - if user_signed_in?
    - if comment.user == current_user
      = link_to "Delete", [comment.article, comment], method: :delete, data: {confirm: "Are You Sure?"}, class: "btn btn-sm btn-default"
    = link_to like_article_comment_path(comment.article, comment), method: :put, class: "btn btn-sm btn-default" do
      %span.glyphicon.glyphicon-heart
        = comment.get_upvotes.size
%hr
